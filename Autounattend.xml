                <SynchronousCommand wcm:action="add">
                    <Order>23</Order>
                    <CommandLine>%SystemRoot%\System32\reg add &quot;HKEY_LOCAL_MACHINE\SYSTEM\CurrentControlSet\Control\Terminal Server&quot; /v fDenyTSConnections /t REG_DWORD /d 0 /f</CommandLine>
